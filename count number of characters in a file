#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *file;
    char filename[100];
    char ch;
    int count = 0;

   
    printf("Enter the name of the file to open: ");
    scanf("%s", filename);

    
    file = fopen(filename, "r");

    
    if (file == NULL) {
        printf("Could not open file %s\n", filename);
        return 1;
    }

    
    while ((ch = fgetc(file)) != EOF) {
        count++;
    }

    
    fclose(file);

    printf("The file %s has %d characters.\n", filename, count);

    return 0;
}
