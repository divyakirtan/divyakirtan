#include <stdio.h>

void decimalToBinary(int n) {
    if (n == 0) {
        printf("0");
        return;
    }

    int binary[32]; 
    int index = 0;

    
    while (n > 0) {
        binary[index] = n % 2; 
        n = n / 2;              
        index++;
    }

    
    printf("Binary: ");
    for (int i = index - 1; i >= 0; i--) {
        printf("%d", binary[i]);
    }
    printf("\n");
}

int main() {
    int decimalNumber;

    
    printf("Enter a decimal number: ");
    scanf("%d", &decimalNumber);

    
    decimalToBinary(decimalNumber);

    return 0;
}
