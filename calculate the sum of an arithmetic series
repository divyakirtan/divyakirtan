#include <stdio.h>

int main() {
    int a, d, n;
    int sum = 0;

    
    printf("Enter the first term (a): ");
    scanf("%d", &a);
    printf("Enter the common difference (d): ");
    scanf("%d", &d);
    printf("Enter the number of terms (n): ");
    scanf("%d", &n);

    
    sum = (n * (2 * a + (n - 1) * d)) / 2;

    
    printf("The sum of the arithmetic series is: %d\n", sum);

    return 0;
}
