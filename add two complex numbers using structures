#include <stdio.h>


struct Complex {
    float real;
    float imaginary;
};


struct Complex addComplex(struct Complex c1, struct Complex c2) {
    struct Complex result;
    result.real = c1.real + c2.real;
    result.imaginary = c1.imaginary + c2.imaginary;
    return result;
}


void displayComplex(struct Complex c) {
    if (c.imaginary >= 0) {
        printf("%.2f + %.2fi\n", c.real, c.imaginary);
    } else {
        printf("%.2f - %.2fi\n", c.real, -c.imaginary);
    }
}

int main() {
    struct Complex num1, num2, sum;


    printf("Enter the real and imaginary parts of the first complex number:\n");
    printf("Real: ");
    scanf("%f", &num1.real);
    printf("Imaginary: ");
    scanf("%f", &num1.imaginary);


    printf("Enter the real and imaginary parts of the second complex number:\n");
    printf("Real: ");
    scanf("%f", &num2.real);
    printf("Imaginary: ");
    scanf("%f", &num2.imaginary);


    sum = addComplex(num1, num2);

    
    printf("Sum of the complex numbers: ");
    displayComplex(sum);

    return 0;
}
