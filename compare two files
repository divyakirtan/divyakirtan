#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *file1, *file2;
    char filename1[100], filename2[100];
    char ch1, ch2;
    int isIdentical = 1; 

    
    printf("Enter the name of the first file: ");
    scanf("%s", filename1);

    
    printf("Enter the name of the second file: ");
    scanf("%s", filename2);

    
    file1 = fopen(filename1, "r");
    if (file1 == NULL) {
        printf("Could not open file %s\n", filename1);
        return 1;
    }

    
    file2 = fopen(filename2, "r");
    if (file2 == NULL) {
        printf("Could not open file %s\n", filename2);
        fclose(file1);  
        return 1;
    }

    
    while (((ch1 = fgetc(file1)) != EOF) && ((ch2 = fgetc(file2)) != EOF)) {
        if (ch1 != ch2) {
            isIdentical = 0; 
            break;
        }
    }

   
    if ((ch1 != EOF || ch2 != EOF) && isIdentical == 1) {
        isIdentical = 0;  
    }

    
    fclose(file1);
    fclose(file2);

    if (isIdentical) {
        printf("The files %s and %s are identical.\n", filename1, filename2);
    } else {
        printf("The files %s and %s are different.\n", filename1, filename2);
    }

    return 0;
}
