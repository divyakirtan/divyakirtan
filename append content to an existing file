#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *file;
    char filename[100];
    char text[1000];

   
    printf("Enter the name of the file to append to: ");
    scanf("%s", filename);

    
    file = fopen(filename, "a");

   
    if (file == NULL) {
        printf("Could not open file %s\n", filename);
        return 1;
    }

    
    printf("Enter the text to append to the file: ");
    getchar(); 
    fgets(text, sizeof(text), stdin);

    
    fprintf(file, "%s", text);

   
    fclose(file);

    printf("Text appended to %s successfully.\n", filename);

    return 0;
}
